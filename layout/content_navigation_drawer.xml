        <!--android:id="@+id/topToursTV"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Top Tours"-->
        <!--android:textSize="20dp"-->
        <!--android:textColor="#0b0941"-->
        <!--android:layout_below="@id/main_list"-->
